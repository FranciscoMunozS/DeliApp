<div class="container">
  <div class="row">
    <div class="col s12">
      <h2>Deliveries en Valdivia</h2>
      <div class="divider"></div>
    </div>
  </div>
  <div class="row">
    <% @foods.each do |food| %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
            <%= image_tag food.food_file_url %>
            <span class="card-title">
              <%= food.name %>
            </span>
            <div class="card-action">
              <%= link_to 'Ver Delivery', food, class: 'btn' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <%= link_to 'Agregar Nuevo Local', new_food_path, class: 'btn' %>
  <% end %>
  <br><br>
</div>
