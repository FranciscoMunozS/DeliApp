<div class="parallax-container">
  <div class="parallax">
    <%= image_tag @food.food_file_url %>
  </div>
</div>
<div class="container">
  <h3><%= @food.name %></h3>
  <div class="divider"></div>
  <div class="col s12">
    <div class="row">
      <div class="col s6">
        <h5>Horario de atención</h5>
        <p>De <%= @food.start_day %> a <%= @food.start_end %> desde las <%= @food.start_at.strftime("%I:%M %p") %> hasta las <%= @food.end_at.strftime("%I:%M %p") %></p>
      </div>
      <div class="col s6">
        <h5>Dirección</h5>
        <p><%= @food.address %></p>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <h5>Contacto</h5>
        <p>Numero de contacto/WhatsApp: <%= @food.contact %></p>
      </div>    
    </div>
  </div>
  <div class="divider"></div>
  <h5>Acerca de</h5>
  <p><%= raw @food.description %></p>

  <%= link_to 'Edit', edit_food_path(@food) %> |
  <%= link_to 'Back', foods_path %>
</div>
